- const links = [{ name : 'Works', img : 'images/previews/img-1', url : "/projects"}, { name : 'Services', img : 'images/previews/img-2', url : "/#services"}, { name : 'About me', img : 'images/previews/img-3', url : "/about"}  ]

.menu__content
  button.button-icon.button-close.mobile-only
    include ../svg/close.svg

  ul.menu__links
    each link in links
      li.menu__links__item(data-snap="image" data-snap-image=link.img)
        a.menu__links__item__link(href=link.url)=link.name


  hr.divider.mobile-only

  a.button.button-primary.button-bg.mobile-only(href="#")
    span.button__wrapper__flex
      |Work with me
      include ../svg/plug.svg

