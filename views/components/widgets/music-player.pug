.player
    .player__body
      .player__button__wrapper
        button.player__button.expand
          span expand
          i.icon-maximize-circle
        button.player__button.close
          span close
          i.icon-close

      //Music cover
      .player__body__wrapper
        .player__content
          .player__cover
            img(src='images/home-link-preview.png')

          //Music details
          .player__detail
            .player__detail__name Tayc
            .player__detail__title Donne le moi

          //Progress bar
          .player__timer

            //timer slider
            .player__timer__progress
              input.player__timer__progress__range#range(type="range" min="0" max="100" step="1")
              span.player__timer__progress__bar
              span.player__timer__progress__elapse

            //Elapse time values
            .player__timer__times
              span.player__timer__times__starttime 00:00
              span.player__timer__times__endtime 00:00

          //Navigation
          .player__navigation
            //Backward
            button.player__navigation__button
              i.icon-backward-15-seconds

              //Play/Pause
            button.player__navigation__button
              i.icon-Play

              //Forward
            button.player__navigation__button
              i.icon-forward-15-seconds



        .player__volume
          .player__volume__wrapper
            .player__volume__slider
              .player__volume__grap
            i.icon-volume-high.player__volume__icon
